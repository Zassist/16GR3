<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>SBMS_work</display-name>
  <servlet>
    <servlet-name>BmServlet</servlet-name>
    <servlet-class>com.qhit.sbms.bm.servlet.BmServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>GmServlet</servlet-name>
    <servlet-class>com.qhit.sbms.gm.servlet.GmServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>com.qhit.sbms.login.servlet.LoginServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>SmServlet</servlet-name>
    <servlet-class>com.qhit.sbms.sm.servlet.SmServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>UmServlet</servlet-name>
    <servlet-class>com.qhit.sbms.um.servlet.UmServlet</servlet-class>
  </servlet>
	<filter>
		<filter-name>EncodeFilter</filter-name>
		<filter-class>com.qhit.sbms.common.filter.EncodeFilter</filter-class>
	</filter>



	<filter-mapping>
		<filter-name>EncodeFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
  <servlet-mapping>
    <servlet-name>BmServlet</servlet-name>
    <url-pattern>/Bm</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>GmServlet</servlet-name>
    <url-pattern>/Gm</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/Login</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>SmServlet</servlet-name>
    <url-pattern>/Sm</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>UmServlet</servlet-name>
    <url-pattern>/Um</url-pattern>
  </servlet-mapping>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  	<listener>
		<listener-class>com.qhit.sbms.common.listener.ApplicationListener</listener-class>
	</listener>
	<listener>
		<listener-class>com.qhit.sbms.common.listener.UserExitListner</listener-class>
	</listener>
</web-app>